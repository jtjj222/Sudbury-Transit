<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/translucent_grey"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Sudbury Shopping Centre"
        android:id="@+id/txtHeading"
        android:textColor="#FFFFFFFF"
        android:paddingBottom="5dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:maxWidth="300dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description lorem ipsum is simply dummy text of the printing and typesetting industry. "
        android:id="@+id/txtDescription"
        android:textColor="#FFFFFFFF"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:maxWidth="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Buses"
        android:id="@+id/btnViewBusses"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnClosePopup"
        android:layout_row="2"
        android:layout_column="1" />
</GridLayout>
