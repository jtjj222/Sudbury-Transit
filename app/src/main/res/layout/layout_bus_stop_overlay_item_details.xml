<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/translucent_grey"
    android:padding="20dp"
    android:id="@+id/layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Sudbury Shopping Centre"
        android:id="@+id/txtHeading"
        android:textColor="#FFFFFFFF"
        android:paddingBottom="5dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:maxWidth="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1001"
        android:id="@+id/txtStopNumber"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calls"
        android:id="@+id/txtCalls"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="#fff"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listCalls" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_busses"
        android:id="@+id/btnViewBusses"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_popup"
        android:id="@+id/btnClosePopup"
        android:layout_row="4"
        android:layout_column="1" />

</GridLayout>
